@model CreateArticleViewModel

@{
    ViewData["Title"] = "Create Article";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead">This is the page where the creation of an article is possible.</p>        
</div>

<div class="row">
    <div class="col-md-4">        
        <form method="post" asp-controller="article" asp-action="CreateArticle" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="CreateArticleData.Title" class="control-label"></label>
                <input asp-for="CreateArticleData.Title" class="form-control" />
                <span asp-validation-for="CreateArticleData.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateArticleData.Content" class="control-label"></label>
                <textarea asp-for="CreateArticleData.Content" class="form-control" style="height:125px"></textarea>
                <span asp-validation-for="CreateArticleData.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateArticleData.Tags" class="control-label"></label>
                <input asp-for="CreateArticleData.Tags" class="form-control" />
                <span asp-validation-for="CreateArticleData.Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateArticleData.AuthorNickname" class="control-label"></label>
                <input asp-for="CreateArticleData.AuthorNickname" class="form-control" />
                <span asp-validation-for="CreateArticleData.AuthorNickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateArticleData.AuthorEmail" class="control-label"></label>
                <input asp-for="CreateArticleData.AuthorEmail" class="form-control" />
                <span asp-validation-for="CreateArticleData.AuthorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Article" class="btn btn-dark" />
            </div>

            <div class="form-group">
                <strong>@ViewData["Message"]</strong>
            </div>
        </form>
    </div>
</div>
