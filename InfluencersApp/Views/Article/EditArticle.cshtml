@model EditArticleViewModel

@{ 
    ViewData["Title"] = "EditArticleView";

    Model.ArticleDetailsViewModel.ArticleDetails.Tag = Model.ArticleDetailsViewModel.ArticleDetails.ArticleTags.Aggregate((a, b) => $"{ a } { b }");
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead">This is the page where you can see the full details of an article</p>

    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6">
            <form method="post" asp-action="SubmitChanges" asp-controller="Article" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ArticleDetailsViewModel.ArticleDetails.Title" class="control-label"></label>
                    <input asp-for="ArticleDetailsViewModel.ArticleDetails.Title" class="form-control" />
                    <span asp-validation-for="ArticleDetailsViewModel.ArticleDetails.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleDetailsViewModel.ArticleDetails.Content" class="control-label"></label>
                    <textarea asp-for="ArticleDetailsViewModel.ArticleDetails.Content" class="form-control" style="height:125px"></textarea>
                    <span asp-validation-for="ArticleDetailsViewModel.ArticleDetails.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleDetailsViewModel.ArticleDetails.Tag" class="control-label"></label>
                    <input asp-for="ArticleDetailsViewModel.ArticleDetails.Tag" class="form-control" />
                    <span asp-validation-for="ArticleDetailsViewModel.ArticleDetails.Tag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleDetailsViewModel.ArticleDetails.ArticleId" hidden class="form-control"></label>
                    <input asp-for="ArticleDetailsViewModel.ArticleDetails.ArticleId"class="form-control" hidden/>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleDetailsViewModel.ArticleDetails.AuthorEmail" hidden class="control-label"></label>
                    <input asp-for="ArticleDetailsViewModel.ArticleDetails.AuthorEmail" hidden class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleDetailsViewModel.ArticleDetails.AuthorNickname" hidden class="control-label"></label>
                    <input asp-for="ArticleDetailsViewModel.ArticleDetails.AuthorNickname" hidden class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update Article" class="btn btn-dark btn-lg" />
                </div>

                <div class="form-group">
                    <strong>@ViewData["Message"]</strong>
                </div>
            </form>            
        </div>
    </div>
</div>

